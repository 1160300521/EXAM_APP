<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="50dp">
        <include layout="@layout/activity_toolbar"/>
    </LinearLayout>
    <TextView
            android:text="\n请选择做题数量"
            android:background="@drawable/line_out"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:id="@+id/textView"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
    >

        <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:background="@drawable/line_out1">
            <RadioButton
                    android:text="1道题"
                    android:checked="true"
                    android:layout_marginLeft="30dp"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:id="@+id/bt_pn1"
                    android:layout_weight="1"/>
            <RadioButton
                    android:text="2道题"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:id="@+id/bt_pn2"
                    android:layout_weight="1"/>
            <RadioButton
                    android:text="3道题"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:id="@+id/bt_pn3"
                    android:layout_weight="1"/>
        </RadioGroup>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:text="\n请选择题目类型"
                android:textSize="20dp"
                android:layout_width="match_parent"
                android:layout_height="63dp"
                android:id="@+id/type_text"
                android:background="@drawable/line_out1"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:background="@drawable/line_out1">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="@drawable/line_out1">

                <TextView
                        android:text=""
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:id="@+id/textView6"
                        android:layout_weight="1"/>
                <ImageView
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:background="@drawable/exercise_bt_type"
                        android:id="@+id/imageView4"
                        android:layout_weight="1"/>
                <TextView
                        android:text="   数据库"
                        android:textSize="30dp"
                        android:layout_width="300dp"
                        android:layout_height="50dp"
                        android:id="@+id/text_db"
                        android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="@drawable/line_out1">
                <TextView
                        android:text=""
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:id="@+id/textView10"
                        android:layout_weight="1"/>
                <ImageView
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:background="@drawable/exercise_bt_type"
                        android:id="@+id/imageView7"
                        android:layout_weight="1"/>
                <TextView
                        android:text="   计算机网络"
                        android:textSize="30dp"
                        android:layout_width="300dp"
                        android:layout_height="50dp"
                        android:id="@+id/text_cn"
                        android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="@drawable/line_out1">
                <TextView
                        android:text=""
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:id="@+id/textView8"
                        android:layout_weight="1"/>
                <ImageView
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:background="@drawable/exercise_bt_type"
                        android:id="@+id/imageView6"
                        android:layout_weight="1"/>
                <TextView
                        android:text="   操作系统"
                        android:textSize="30dp"
                        android:layout_width="300dp"
                        android:layout_height="50dp"
                        android:id="@+id/text_os"
                        android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="@drawable/line_out1">
                <TextView
                        android:text=""
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:id="@+id/textView11"
                        android:layout_weight="1"/>
                <ImageView
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:background="@drawable/exercise_bt_type"
                        android:id="@+id/imageView61"
                        android:layout_weight="1"/>
                <TextView
                        android:text="   数据结构"
                        android:textSize="30dp"
                        android:layout_width="300dp"
                        android:layout_height="50dp"
                        android:id="@+id/text_ds"
                        android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
